<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Compteur">

    <Button
        android:id="@+id/buttonDecremente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:onClick="decremente"
        android:text="Dec"
        app:layout_constraintEnd_toStartOf="@+id/textViewcompteur"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonIncremente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:onClick="incremente"
        android:text="Inc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_marginTop="588dp"
        android:layout_marginEnd="128dp"
        android:onClick="quit"
        android:text="Quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcompteur" />

    <TextView
        android:id="@+id/textViewcompteur"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/buttonIncremente"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/compteur" />
</androidx.constraintlayout.widget.ConstraintLayout>